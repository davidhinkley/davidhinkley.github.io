{
  "name": "galleria",
  "version": "1.0.0",
  "description": "Galleria - An elegant photo gallery application with React and Node.js",
  "main": "index.js",
  "scripts": {
    "start": "bash start.sh",
    "server": "cd server && npm run dev",
    "server-prod": "cd server && npm run start",
    "server-clean": "cd server && npm run dev-clean",
    "client": "cd client && npm start",
    "setup": "cd server && npm run setup",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "add-sample-images": "node server/create-sample-images.js",
    "add-sample-images-force": "node server/create-sample-images.js --force",
    "kill-server": "cd server && npm run kill-server",
    "start-clean": "node start-app-clean.js",
    "start-prod": "node start-app-prod.js",
    "fix-persistence": "cd server && npm run fix-persistence",
    "check-db": "cd server && npm run check-db",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "node",
    "express",
    "tailwind",
    "gallery"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}